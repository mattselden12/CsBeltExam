@model Auction

<div id="addnew">
    <h1>New Auction</h1>
    <form asp-action="AddAuction" asp-controller="Home" method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Product Name</label>
            <span asp-validation-for="ProductName" style="color:red;"></span>
                <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="ProductName">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description</label>
            <span asp-validation-for="Description" style="color:red;"></span>
            <div class="col-sm-10">
                <textarea rows="3" asp-for="Description"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Starting Bid</label>
            <span asp-validation-for="TopBid" style="color:red;"></span>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="TopBid">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">End Date:</label>
            <span asp-validation-for="EndDate" style="color:red;"></span>
            <div class="col-sm-10">
                <input type="date" class="form-control" asp-for="EndDate">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>