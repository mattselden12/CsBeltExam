@model UserValidator

<div id="login">
    <div class="side">
        <h1 class="title">Login</h1>
        <form asp-action="LoginProcess" asp-controller="Home" method="post">
            <p style="color:red;">@ViewBag.BadPass</p>
            <p style="color:red;">@ViewBag.NoUser</p>
            <p style="color:red;">@ViewBag.PassNull</p>
            <p style="color:red;">@ViewBag.NotLoggedIn</p>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="LUsername">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="LPassword">
                </div>
                <button type="submit" class="btn btn-primary loginbutton">Login</button>
            </div>
        </form>
    </div>
    <div class="side">
        <h1 class="title">Registration</h1>
        <form asp-action="RegisterProcess" asp-controller="Home" method="post" class="register">
            <div class="regside">
                <p style="color:red;">@ViewBag.Error</p>
                <div class="form-group">
                    <label>Username</label>
                    <span asp-validation-for="Username" style="color:red;"></span>
                    <input type="text" class="form-control reg" asp-for="Username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <span asp-validation-for="Password" style="color:red;"></span>
                    <input type="password" class="form-control reg" asp-for="Password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control reg" asp-for="ConfirmPassword">
                </div>
            </div>
            <div class="regside rights">
                <div class="form-group">
                    <label>First Name</label>
                    <span asp-validation-for="FirstName" style="color:red;"></span>
                    <input type="text" class="form-control reg" asp-for="FirstName">
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <span asp-validation-for="LastName" style="color:red;"></span>
                    <input type="text" class="form-control reg" asp-for="LastName">
                </div>
                <button type="submit" class="btn btn-primary regbutton">Register</button>
            </div>
        </form>
    </div>
</div>